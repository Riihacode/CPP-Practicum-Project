<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        >

        <TextView
            android:id="@+id/tvBookTickets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/books_ticket"
            android:layout_margin="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linear_line_books_ticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvBookTickets"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_train_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear_line_books_ticket"
            android:text="@string/train_menu"
            />

        <EditText
            android:id="@+id/edt_choose_train_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:autofillHints=""
            android:inputType="numberSigned"
            app:layout_constraintTop_toBottomOf="@+id/tv_train_menu"
            android:hint="@string/choose_train_type"
            />

        <EditText
            android:id="@+id/edt_choose_your_hometown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:autofillHints=""
            android:inputType="numberSigned"
            app:layout_constraintTop_toBottomOf="@+id/edt_choose_train_type"
            android:hint="@string/choose_your_hometown"
            />

        <EditText
            android:id="@+id/edt_choose_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:autofillHints=""
            android:inputType="numberSigned"
            app:layout_constraintTop_toBottomOf="@+id/edt_choose_train_type"
            android:hint="@string/choose_your_hometown"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>